<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Admin CSS -->
  <link href="/public/css/admin.css" rel="stylesheet">
</head>

<body>

  <!-- ========================
       Sidebar
  ========================= -->
  <aside id="sidebar" class="sidebar">

    <div class="sidebar-header">
      <button id="toggleSidebar" class="toggle-btn">
        <svg width="22" height="22" fill="currentColor">
          <rect width="22" height="3" y="3"></rect>
          <rect width="22" height="3" y="10"></rect>
          <rect width="22" height="3" y="17"></rect>
        </svg>
      </button>
      <span class="sidebar-title">ADMIN</span>
    </div>

    <nav class="nav flex-column mt-4">

      <!-- DASHBOARD -->
      <button class="nav-link active" data-panel="dashboard">
        <svg class="nav-icon" viewBox="0 0 24 24">
          <path d="M3 13h8V3H3v10zm10 8h8v-6h-8v6zM3 21h8v-6H3v6zm10-8h8V3h-8v10z"/>
        </svg>
        <span class="nav-text">Dashboard</span>
      </button>

      <!-- PRODUCTS -->
      <button class="nav-link" data-panel="products">
        <svg class="nav-icon" viewBox="0 0 24 24">
          <path d="M3 7l9-4 9 4v6c0 5-3 9-9 9s-9-4-9-9V7zm9 12c4 0 6-3 6-6V8l-6-3-6 3v5c0 3 2 6 6 6z"/>
        </svg>
        <span class="nav-text">Products</span>
      </button>

      <!-- POS -->
      <button class="nav-link" data-panel="pos">
        <svg class="nav-icon" viewBox="0 0 24 24">
          <path d="M7 4h10l4 4v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V6l4-2zm9 8H8v2h8v-2z"/>
        </svg>
        <span class="nav-text">POS</span>
      </button>

      <!-- STRATEGY -->
      <button class="nav-link" data-panel="strategy">
        <svg class="nav-icon" viewBox="0 0 24 24">
          <path d="M3 13h2a7 7 0 0 0 14 0h2a9 9 0 0 1-18 0zm9-9a9 9 0 0 1 9 9h-2a7 7 0 0 0-14 0H3a9 9 0 0 1 9-9z"/>
        </svg>
        <span class="nav-text">Strategy</span>
      </button>

    </nav>

  </aside>

  <!-- ========================
       MAIN CONTENT
  ========================= -->
  <main id="main-content">
    <header class="topbar">
      <h2 id="panel-title">Dashboard</h2>
      <a href="/auth/logout" class="logout-btn">Logout</a>
    </header>

    <div id="panel-container" class="panel-container">
      <!-- Panels load here -->
    </div>
  </main>

  <!-- JS -->
  <script src="/public/js/admin.js"></script>
</body>
</html>
